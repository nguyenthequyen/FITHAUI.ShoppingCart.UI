                    <ul class="shopdata">
                        <li class="cartempty">
                            <table>
                                <tr>
                                    <td><a href="#">Giỏ hàng trống</a></td>
                                </tr>
                            </table>
                        </li>
                        <li class="cartfull">
                            <table>
                                <tr>
                                    <td><a href="#"><img src="~/images/tt.jpg" alt="imgname"></a></td>
                                    <td><a href="#">Kielbasa hamburg</a> <br> - <small>Select Green</small></td>
                                    <td>X <br>1</td>
                                    <td>$ 56</td>
                                    <td><a href="#" data-toggle="tooltip" data-placement="top" title="delete"><i class="fa fa-trash"></i></a></td>
                                </tr>
                                <tr>
                                    <td><a href="#"><img src="~/images/tt.jpg" alt="imgname"></a></td>
                                    <td><a href="#">Kielbasa hamburg</a> <br> - <small>Select Green</small></td>
                                    <td>X <br>1</td>
                                    <td>$ 56</td>
                                    <td><a href="#" data-toggle="tooltip" data-placement="top" title="delete"><i class="fa fa-trash"></i></a></td>
                                </tr>
                            </table>
                        </li>
                        <li class="cartbutton">
                            <a asp-controller="Cart" asp-action="ViewCart" title="View">Xem giỏ hàng</a>
                            <a asp-controller="Cart" asp-action="CheckOut" title="Checkout">Xác nhận giỏ hàng</a>
                        </li>
                    </ul>
                </div>
                <!-- /Basket -->
            </div>
        </div>
    </div>
    <!--======= /Midhead =========-->
    <!--========= Menu ===========-->
    <div class="" data-spy="affix" data-offset-top="60" data-offset-bottom="200">
        <div class="container">
            <div class="row menu">
                <div class="col-sm-12">
                    <a class="mobile"><i class="fa fa-bars fa-2x"></i>Menu</a>
                    <ul>
                        <li><a class="closemenu">close</a></li>
                        <li class="singlesub">
                            <a class="active" asp-controller="Home" asp-action="Index" title="Trang chủ"><i class="fa fa-angle-double-left"></i>Trang chủ</a>
                        </li>
                        @*<li><a asp-action="About" asp-controller="Home" title="About">Giới thiệu</a></li>*@
                        <li>
                            <a href="javascript:void(0)" title="Catlog">Danh mục sản phẩm<i class="fa fa-angle-down"></i></a>
                            <!-- SUBMENU -->
                            <div class="submenus">
                                @{
                                    @Html.Partial("~/Views/Home/MenuPartial.cshtml", category);
                                }
                            </div>
                            <!-- /SUBMENU -->
                        </li>
                        <li><a asp-controller="Dashboard" title="Layout">Trang Admin</a></li>
                        <li><a asp-controller="Product" asp-action="GetAllProductList" title="">Product List</a></li>
                        @*<li><a href="contact.html" title="Contact">Liên hệ</a></li>*@
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--========= /Menu =========-->
</header>
<section>
    <div class="container">
        <div class="row slider">
            <div id="slidercarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#slidercarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#slidercarousel" data-slide-to="1"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="images/s1.jpg" alt="Women Fashion">
                        <div class="carousel-caption">
                            <h2>Sản phẩm tuyệt vời nhất 2018</h2>
                            <h3>Săn đón sản phẩm</h3>
                            <a href="#" title="Mua ngay" class="button">Mua ngay <i class="fa fa-angle-right"></i></a>
                        </div>
                    </div>
                    <div class="item">
                        <img src="images/s2.jpg" alt="Women Fashion">
                        <div class="carousel-caption">
                            <h2>Tận hưởng mua sắm trực tuyến</h2>
                            <h3>Giảm giá 50% các sản phẩm</h3>
                            <a href="#" title="Mua ngay" class="button">Mua ngay <i class="fa fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#slidercarousel" role="button" data-slide="prev">
                    <span class="fa fa-angle-left fa-3x" aria-hidden="true"></span>
                    <span class="sr-only">Quay lại</span>
                </a>
                <a class="right carousel-control" href="#slidercarousel" role="button" data-slide="next">
                    <span class="fa fa-angle-right fa-3x" aria-hidden="true"></span>
                    <span class="sr-only">Tiếp theo</span>
                </a>
            </div>
        </div>
    </div>
</section>
<!--======== /Slider ============-->
<!--======== Homebanner ============-->
<section>
    <div class="container">
        <div class="row homebanner">
        </div>
    </div>
</section>
<!--======== /Homebanner ============-->
<!--======== Deal Of The Day ============-->
<section>
    <div class="container">
        <div class="row deals">
            <div class="col-sm-12 padded">
                <img src="images/de1.png" alt="deal">
                <div class="dealbox">
                    <h2>Lượt khách hàng truy cập</h2>
                    <p>Giảm giá 50% các sản phẩm</p>
                    <ul id="clockdiv">
                        <li>
                            <label class="days"></label>
                            <span>Ngày</span>
                        </li>
                        <li>
                            <label class="hours"></label>
                            <span>Giờ</span>
                        </li>
                        <li>
                            <label class="minutes"></label>
                            <span>Phút</span>
                        </li>
                        <li>
                            <label class="seconds"></label>
                            <span>Giây</span>
                        </li>
                    </ul>
                    <a href="#" class="button">@ViewBag.NumberVisitAmount</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--======== /Deal Of The Day ============-->
<!--======== New Product ============-->
<section>
    <div class="container">
        <div class="row product">
            <div class="col-sm-12 text-center">
                <h2 class="heading">Sản phẩm mới</h2>
            </div>
            <div class="col-sm-12 text-center tabdata">
                <!--===== Tab panes =========-->
                <div class="tab-content">
                    <!--===== Latest =========-->
                    <div class="tab-pane active" id="latest">
                        <div class="owl-carousel pbox">
                            @Html.Partial("_ProductPartialHost", productHost);
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--======== /New Product ============-->
<!--======== Featured Product ============-->
<section>
    <div class="container">
        <div class="row product">
            <div class="col-sm-12 text-center">
                <h2 class="heading">Sản phẩm bán chạy</h2>
            </div>
            <div class="col-sm-12 text-center">
                <div class="owl-carousel pbox">
                    @Html.Partial("_ProductPartialHost", productHost);
                </div>
            </div>
        </div>
    </div>
</section>
<!--======== /Featured Product ============-->
<!--========= Newsletter ========-->
<section>
    <div class="container">
        <div class="row newsletter">
            <div class="col-sm-12 col-lg-6">
                <h5><i class="fa fa-paper-plane-o fa-3x"></i>Đăng ký theo dõi chúng tôi<span>Bạn sẽ không bõ lỡ bất kỳ tin khuyến mãi nào</span></h5>
