@model IEnumerable<FITHAUI.ShoppingCart.UI.Models.Product>
@{
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
@foreach (var item in Model)
{
    <form asp-action="SelectProductByProductCode" method="post" asp-controller="Product">
        <tr class="text-center">
            <th class="text-left">@item.ProductCode</th>
            <th class="text-left">@item.ProductName</th>
            <th class="text-left">@item.ProductColor</th>
            <th class="text-left">
                @String.Format(info, "{0:c}", item.ProductPrice)
            </th>
            <th class="text-right">@item.ProductAmount</th>
            @{
                if (item.ProductStatus == 1)
                {
                    <th class="text-left">Còn hàng</th>
                }
                else if (item.ProductStatus == 1)
                {
                    <th class="text-left">Hết hàng</th>
                }
                else
                {
                    <th class="text-left">Chưa xác định</th>
                }
            }
            <th class="text-right">@item.ProductRatting</th>
            @{
                if (item.ProductNew == 1)
                {
                    <th class="text-left">Mới</th>
                }
                else if (item.ProductNew == 1)
                {
                    <th class="text-left">Cũ</th>
                }
                else
                {
                    <th class="text-left">Chưa xác định</th>
                }
            }
            <th class="text-left">@item.ProductBrand</th>
            <th>
                <div class="pl-3 float-left btn-edit">
                    <a asp-action="GetProductByProcductCode" asp-controller="Product" asp-route-productId="@item.ProductId"><i class="fas fa-edit text-success"></i></a>
                </div>
                <div class="pl-1">
                    <a asp-action="DeleteProduct" asp-controller="Product" asp-route-productId="@item.ProductId" class="delete-product"><i class="fas fa-trash-alt text-danger"></i></a>
                </div>
            </th>
        </tr>
    </form>
}   