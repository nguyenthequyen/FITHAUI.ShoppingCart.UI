@model IEnumerable<FITHAUI.ShoppingCart.UI.Models.ProductCategoryViewModel>
@foreach (var item in Model)
{
    <form asp-action="SelectProductByProductCode" method="post" asp-controller="Product">
        <tr class="text-center">
            <th>@item.ProductCode</th>
            <th>@item.ProductName</th>
            <th>@item.ProductColor</th>
            <th>@item.ProductPrice</th>
            <th>@item.ProductAmount</th>
            <th>@item.ProductStatus</th>
            <th>@item.ProductRatting</th>
            <th>@item.ProductNew</th>
            <th>@item.ProductDescription</th>
            <th>
                <div class="pl-3 float-left btn-edit">
                    <a asp-action="GetProductByProcductCode" asp-controller="Product" asp-route-productId="@item.ProductId"><i class="fas fa-edit text-success"></i></a>
                </div>
                <div class="pl-1">
                    <a asp-action="DeleteProduct" asp-controller="Product" asp-route-productId="@item.ProductId" class="delete-product"><i class="fas fa-trash-alt text-danger"></i></a>
                </div>
            </th>
        </tr>
    </form>
}   