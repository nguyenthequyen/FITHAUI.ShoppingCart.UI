@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Areas/Identity/Pages/_Layout.cshtml";
}

@model FITHAUI.ShoppingCart.UI.Models.Category
<div class="content">
    <div class="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card m-b-20">
                        <div class="card-body">
                            <div class="container-login100-form-btn">
                                <form action="/" method="post">
                                    <button class="login100-form-btn btn btn-primary btn-cencal" type="submit" id="updateproduct" asp-action="GetAllCategories" asp-controller="Category">Hủy</button>
                                </form>
                            </div>
                            <form class="login100-for validate-form form-insert" method="post" asp-action="EditCategory" enctype="multipart/form-data">
                                <div class="mb-2 mt-4 validate-input d-none">
                                    <div class="row">
                                        <div class="col-lg-2 col-md-2 col-2">
                                            <label asp-for="CategoryId" class="pt-2"></label>
                                        </div>
                                        <div class="col-lg-10 col-md-10 col-10">
                                            <input asp-for="CategoryId" class="form-control border border-secondary" />
                                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-2 mt-4 validate-input">
                                    <div class="row">
                                        <div class="col-lg-2 col-md-2 col-2">
                                            <label asp-for="CategoryName" class="pt-2"></label>
                                        </div>
                                        <div class="col-lg-10 col-md-10 col-10">
                                            <input asp-for="CategoryName" class="form-control border border-secondary" />
                                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-2 validate-input" data-validate="Password is required">
                                    <div class="row">
                                        <div class="col-lg-2 col-md-2 col-2">
                                            <label asp-for="CategoryCode" class="pt-2"></label>
                                        </div>
                                        <div class="col-lg-10 col-md-10 col-10">
                                            <input asp-for="CategoryCode" class="form-control border border-secondary" />
                                            <span asp-validation-for="CategoryCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="container-login100-form-btn">
                                    <button class="login100-form-btn btn btn-primary" type="submit">Lưu</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

