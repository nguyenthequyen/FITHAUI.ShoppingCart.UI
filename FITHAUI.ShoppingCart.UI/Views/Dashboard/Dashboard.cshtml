
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Identity/Pages/_Layout.cshtml";
}
<div class="content">
    <div class="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card m-b-20">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="card m-b-20">
                                        <div class="card-body">
                                            <div id="chartContainer" style="height: 370px; width: 100%;"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="card m-b-20">
                                        <div class="card-body">
                                            <div id="chartContainer2" style="height: 370px; width: 100%;"></div>
                                        </div>
                                    </div>
                                </div> <!-- end col -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light2", // "light1", "light2", "dark1", "dark2"
            exportEnabled: true,
            animationEnabled: true,
            title: {
                text: "Thống kê bán hàng theo ngày"
            },
            data: [{
                type: "pie",
                startAngle: 25,
                toolTipContent: "<b>{label}</b>: {y}%",
                showInLegend: "true",
                legendText: "{label}",
                indexLabelFontSize: 16,
                indexLabel: "{label} - {y}%",
                dataPoints: [
                    { y: 51.08, label: "Thứ 2" },
                    { y: 8, label: "Thứ 3" },
                    { y: 10.62, label: "Thứ 4" },
                    { y: 4, label: "Thứ 5" },
                    { y: 10.62, label: "Thứ 6" },
                ]
            }]
        });
        chart.render();
        var chart = new CanvasJS.Chart("chartContainer2", {
            theme: "light2", 
            exportEnabled: true,
            animationEnabled: true,
            title: {
                text: "Thống kê bán hàng theo tuần"
            },
            data: [{
                type: "pie",
                startAngle: 25,
                toolTipContent: "<b>{label}</b>: {y}%",
                showInLegend: "true",
                legendText: "{label}",
                indexLabelFontSize: 16,
                indexLabel: "{label} - {y}%",
                dataPoints: [
                    { y: 51.08, label: "Tuần 1" },
                    { y: 8, label: "Tuần 2" },
                    { y: 10.62, label: "Tuần 3" },
                    { y: 4, label: "Tuần 4" }
                ]
            }]
        });
        chart.render();
    }

</script>

